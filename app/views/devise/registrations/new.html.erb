<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin form-compact", role: "form"}) do |f| %>
	<h2 class="form-signin-heading">Sign up</h2>
  <%= devise_error_messages! %>


	<%= f.text_field :username, autofocus: true, required: true, class: "form-control", placeholder: "Username" %>

	<%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: 'Password' + (" (#{@minimum_password_length} characters minimum)" if @validatable).to_s %>

	<%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control", placeholder: "Password confirmation" %>

	<%= button_tag "Sign up", type: :submit, name: :commit, class: "btn btn-lg btn-success btn-block" %>
<% end %>
