<h1>Don't play with yourself!</h1>

<% @games.each do |game| %>
  <% if game.posts.size > 0 %>
    <div class="game">
      <h1><%= link_to game.name, game.url %></h1>
      <% game.posts.each do |post| %>
        <div class="user_listing">
          <h2><%= post.user.username %> wants to play</h2>
          <% if post.user.id == session[:user_id] %>
            <%= button_to "Delete", {:controller => "posts", :action => "destroy", :id => post.id}, :method => "delete", :remote => true, :form_class => "delete_post" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
