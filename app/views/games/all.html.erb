<h1>Don't play with yourself!</h1>

<% @games.each do |game| %>
  <% if game.posts.size > 0 %>
    <div class="game">
      <h1><%= link_to game.name, game.url %></h1>
      <% game.posts.each do |post| %>
        <div class="user_listing">
          <% if post.user.id == session[:user_id] %>
            <%= button_to "Remove Request", {:controller => "posts", :action => "destroy", :id => post.id}, :method => "delete", :remote => true, :form_class => "delete_post", :confirm => "Are you sure?" %>
          <% end %>

          <h2><%= post.user.username %> wants to play</h2>

          <div class="user_info">
            Sitting on <%= post.user.table %> in position <%= post.user.seat %>
          </div>

          <div class="user_info comment">
            <% if post.user.comment? %>
              "<%= post.user.comment %>"
            <% else %>
              I don't know how you can contact <%= post.user.username %>.
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
