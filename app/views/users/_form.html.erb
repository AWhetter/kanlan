<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="Error">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
  <%= f.label :username %><br>
  <%= f.text_field :username, :value => @user.username %>
  </p>
  <p>
  <%= f.label :password %><br>
  <%= f.password_field :password %>
  </p>
  <p>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
  </p>
  <p>
  <%= f.label :comment, "Where are you sat and how can people contact you?" %><br>
  <%= f.text_field :comment, :value => @user.comment %>
  <%= link_to "Floor Plan", "https://docs.google.com/a/cogsbristol.co.uk/spreadsheet/ccc?key=0AhDXuYfaC1SWdGpPWjVZNHFrM0gtLWcycm14SVNHeVE", :target => "_blank" %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>
