<!DOCTYPE html>
<html>
<head>
  <title>KanLan</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
		<div class="navbar navbar-inverse" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to "KanLan", root_path, class: "navbar-brand" %>
				</div>

				<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
					<ul class="nav navbar-nav">
						<% if user_signed_in? %>
							<li><%= link_to "Add Request", posts_new_path %></li>
						<% else %>
							<li class="dropdown">
								<%= link_to user_omniauth_authorize_path(:steam), class: "dropdown_toggle", data: {toggle: "dropdown"} do %>
									Signup <span class="caret"></span>
								<% end %>
								<ul class="dropdown-menu" role="menu">
									<li><%= link_to "with Steam", user_omniauth_authorize_path(:steam) %></li>
									<li><%= link_to "without Steam", new_user_registration_path %></li>
								</ul>
							</li>
							<li class="dropdown">
								<%= link_to user_omniauth_authorize_path(:steam), class: "dropdown_toggle", data: {toggle: "dropdown"} do %>
									Login <span class="caret"></span>
								<% end %>
								<ul class="dropdown-menu" role="menu">
									<li><%= link_to "with Steam", user_omniauth_authorize_path(:steam) %></li>
									<li><%= link_to "without Steam", new_user_session_path %></li>
								</ul>
							</li>
						<% end %>
					</ul>

					<% if user_signed_in? %>
						<ul class="nav navbar-nav navbar-right">
							<li>
								<%= link_to edit_user_registration_path, id: "profile_btn" do %>
									<% if current_user.image_url %>
										<%= image_tag current_user.image_url, id: "nav_profile_img" %>
									<% end %>
									<%= current_user.username %>
								<% end %>
							</li>
							<li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
						</ul>
					<% end %>

					</ul>
				</div>
			</div>
		</div>

		<div class="container">
			<div class="flash">
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, :id => name %>
				<% end %>
			</div>

			<%= yield %>

		</div>
</body>
</html>
