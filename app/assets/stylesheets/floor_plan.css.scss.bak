// You can use Sass (SCSS) here: http://sass-lang.com/

.floor_plan {
	h1 {
		clear: both;
	}

	.tables {
		$border-thickness: 1px;
		$table-spacing: 3px;
		$row-spacing: 4px;
		$font-size: 16px;
		font-size: $font-size;

		.seat {
			border: $border-thickness solid black;
			text-align: center;
		}


		.end_table {
			font-size: 0;
			margin-top: $row-spacing / 2;

			&.left_end_table {
				margin-right: -$border-thickness;
			}

			&.right_end_table {
				margin-left: -$border-thickness;
			}

			.seat {
				font-size: $font-size;
			}

			.seat:not(:first-child) {
				margin: -1px 0 0 0;
			}
		}

		.table_rows {
			.table_row {
				display: flex;

				.real_table {
					flex-grow: 1;
					display: inline-flex;

					.seat {
						display: inline-block;
						flex-grow: 1;
					}

					.seat:not(:first-child) {
						margin: 0 0 0 (-$border-thickness);
					}
				}

				.real_table:not(:first-child) {
					margin-left: $table-spacing;
				}
			}

			.table_row:not(:first-child) {
				margin-top: $row-spacing;
			}
		}
	}
}
